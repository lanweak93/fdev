.q-file
  width: 100%

  .q-field__native
    word-break: break-all

  .q-field__input
    opacity: 0 !important

    &::-webkit-file-upload-button
      cursor: pointer

  &__dnd
    outline: 1px dashed currentColor
    outline-offset: -4px

  &.q-field--disabled .q-field__marginal
    background-color  $grey-0

  .q-field
    &__marginal
      color $grey-3
      background-color #fff
      svg
        width 16px
        height 16px
    &__suffix
      color $grey-3
      border-left 1px solid $grey-2
      padding 0 8px
